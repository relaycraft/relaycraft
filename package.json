{
  "name": "relaycraft",
  "private": true,
  "version": "1.0.0-rc.1",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "author": "RelayCraft Team",
  "scripts": {
    "dev": "vite",
    "dev:tauri": "RELAYCRAFT_DEV=1 pnpm tauri dev --config '{\"productName\": \"RelayCraft Dev\", \"identifier\": \"com.beta.relaycraft.dev\", \"proxy_port\": 9091}'",
    "build": "pnpm gen:licenses && tsc && vite build",
    "check:i18n": "node scripts/check-i18n.js",
    "preview": "vite preview",
    "tauri": "python engine-core/build.py --sync && tauri",
    "test": "vitest",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check --apply src",
    "gen:licenses": "node scripts/generate-licenses.cjs",
    "release": "standard-version",
    "prepare": "husky"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/merge": "^6.11.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.12",
    "@lezer/common": "^1.5.0",
    "@lezer/highlight": "^1.2.3",
    "@tauri-apps/api": "~2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-http": "^2.5.7",
    "@tauri-apps/plugin-log": "^2.8.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@tauri-apps/plugin-process": "~2.3.1",
    "@tauri-apps/plugin-updater": "~2.10.0",
    "@uiw/react-codemirror": "^4.25.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "consola": "^3.4.2",
    "framer-motion": "^12.29.0",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.562.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "react-virtuoso": "^4.18.1",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.10.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.23",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
