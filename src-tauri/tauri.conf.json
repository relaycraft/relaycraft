{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RelayCraft",
  "version": "0.99.16",
  "identifier": "com.beta.relaycraft",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/relaycraft/relaycraft/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1MDUzOEE0MkJFNzRGRjIKUldUeVQrY3JwRGdGUmE4aWwzYUZKRjMyM1BVVWM0ZHMrNDNsOG1VanlEQW1GbU9rd3NMQmRvWDYK"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "RelayCraft",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "splash.html",
        "width": 480,
        "height": 320,
        "decorations": false,
        "transparent": true,
        "center": true,
        "alwaysOnTop": true,
        "resizable": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "entitlements": "entitlements.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [],
    "resources": [
      "resources/addons/**/*"
    ],
    "fileAssociations": [
      {
        "ext": [
          "rctheme"
        ],
        "name": "RelayCraft Theme",
        "description": "RelayCraft Theme File",
        "role": "Viewer"
      },
      {
        "ext": [
          "rcplugin"
        ],
        "name": "RelayCraft Plugin",
        "description": "RelayCraft Plugin File",
        "role": "Viewer"
      }
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "languages": [
          "English",
          "SimpChinese"
        ]
      }
    },
    "createUpdaterArtifacts": true
  }
}
